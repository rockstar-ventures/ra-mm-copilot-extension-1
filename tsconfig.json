{
  "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "lib": ["dom", "es6", "es2017"],
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "declaration": true,
      "outDir": "./dist",
      "allowJs": true,
      "noImplicitAny": false  // Add this to allow 'any' type for UMD globals
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}